<script>
  // JavaScript to add active class to the selected menu item
  const currentPath = window.location.pathname; // Get the current path
  const links = document.querySelectorAll('aside nav ul li a'); // Select all sidebar links

  links.forEach(link => {
    if (link.getAttribute('href') === currentPath) {
      link.classList.add('bg-blue-600', 'text-white'); // Add active class (blue background, white text)
      link.classList.remove('hover:bg-blue-200')
    }
  });
</script>
