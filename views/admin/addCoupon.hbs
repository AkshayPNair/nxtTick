<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - Add Coupon</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-gray-100 font-sans text-gray-800 flex flex-col min-h-screen">
  <div class="flex">
    <!-- Sidebar -->
    {{> sideBar}}

    <!-- Main Content -->
    <main class="flex-1 bg-white p-5">
      <!-- Header -->
      <div class="flex items-center justify-between mb-5">
        <h1 class="font-bold text-xl">Add Coupon</h1>
        <button class="bg-blue-600 text-white py-2 px-4 rounded-lg">Admin</button>
      </div>

      <!-- Breadcrumbs -->
      <div class="text-sm text-gray-500 mb-5">
        <span>Dashboard</span> > <span>All Coupons</span> > <span class="text-blue-600">Add Coupon</span>
      </div>

      <!-- Form Section -->
      <form id="coupon-form">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 bg-gray-50 p-5 rounded shadow">
          <!-- Form Inputs -->
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium">Coupon Title</label>
              <input type="text" id="couponTitle" name="couponTitle" placeholder="Coupon Title..." class="w-full border p-2 rounded">
            </div>
            <div>
              <label class="block text-sm font-medium">Coupon Code</label>
              <input type="text" id="couponCode" name="couponCode" placeholder="Coupon Code..." class="w-full border p-2 rounded">
            </div>
            <div>
              <label class="block text-sm font-medium">Discount Value (₹)</label>
              <input type="number" id="discountValue" name="discountValue" placeholder="Discount Value..." class="w-full border p-2 rounded">
            </div>
            <div>
              <label class="block text-sm font-medium">Usage Per User</label>
              <input type="number" id="usagePerUser" name="usagePerUser" placeholder="Usage limit per user..." min="1" class="w-full border p-2 rounded">
            </div>
          </div>

          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium">Minimum Price (₹)</label>
              <input type="number" id="minimumPrice" name="minimumPrice" placeholder="Minimum Price..." class="w-full border p-2 rounded">
            </div>
            <div>
              <label class="block text-sm font-medium">Start Date</label>
              <input type="date" id="startDate" name="startDate" class="w-full border p-2 rounded">
            </div>
            <div>
              <label class="block text-sm font-medium">End Date</label>
              <input type="date" id="endDate" name="endDate" class="w-full border p-2 rounded">
            </div>
          </div>
        </div>

        <!-- Actions -->
        <div class="flex justify-end gap-4 mt-6">
          <button type="button" onclick="submitForm()" class="bg-green-600 hover:bg-green-500 text-white px-6 py-2 rounded">ADD COUPON</button>
          <button type="button" class="bg-red-600 hover:bg-red-500 text-white px-6 py-2 rounded" onclick="resetForm()">RESET</button>
          <button type="button" class="bg-gray-300 hover:bg-gray-200 px-6 py-2 rounded">CANCEL</button>
        </div>
      </form>
    </main>
  </div>

  <!-- Footer -->
  <footer class="bg-gray-50 text-center py-4">
    <p>2024 <span class="font-bold text-blue-600">nxtTick</span>. All rights reserved</p>
  </footer>

  <script>
  function resetForm() {
    document.getElementById("coupon-form").reset();
  }

  async function submitForm() {
    // Get form values
    const couponTitle = document.getElementById("couponTitle").value.trim();
    const couponCode = document.getElementById("couponCode").value.trim();
    const discountValue = Number(document.getElementById("discountValue").value.trim());
    const minimumPrice = Number(document.getElementById("minimumPrice").value.trim());
    const startDate = document.getElementById("startDate").value;
    const endDate = document.getElementById("endDate").value;
    const usagePerUser = document.getElementById("usagePerUser").value.trim();

    // Validation
    if (!couponTitle) {
      Swal.fire({icon: "error", title: "Error", text: "Please enter coupon title"});
      return;
    }
    if (couponTitle.length > 20) {
      Swal.fire({icon: "error", title: "Error", text: "Coupon title cannot exceed 20 characters"});
      return;
    }
    if (!couponCode) {
      Swal.fire({icon: "error", title: "Error", text: "Please enter coupon code"});
      return;
    }
    if (couponCode.length > 10) {
      Swal.fire({icon: "error", title: "Error", text: "Coupon code cannot exceed 10 characters"});
      return;
    }
    if (!discountValue || discountValue <= 0) {
      Swal.fire({icon: "error", title: "Error", text: "Please enter valid discount value"});
      return;
    }
    if (!minimumPrice || minimumPrice <= 0) {
      Swal.fire({icon: "error", title: "Error", text: "Please enter valid minimum price"});
      return;
    }
    if (discountValue >= minimumPrice) {
      Swal.fire({icon: "error", title: "Error", text: "Discount value must be less than minimum price"});
      return;
    }
    if (!usagePerUser || usagePerUser <= 0) {
      Swal.fire({icon: "error", title: "Error", text: "Please enter valid usage per user"});
      return;
    }
    if (!startDate) {
      Swal.fire({icon: "error", title: "Error", text: "Please select start date"});
      return;
    }
    if (!endDate || new Date(endDate) <= new Date(startDate)) {
      Swal.fire({icon: "error", title: "Error", text: "End date must be after start date"});
      return;
    }

    // Create request body
    const requestBody = {
      couponTitle,
      couponCode,
      discountValue,
      minimumPrice,
      startDate,
      endDate,
      usagePerUser
    };

    try {
      const response = await fetch('/admin/addCoupon', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(requestBody)
      });

      const result = await response.json();

      if (result.status) {
        await Swal.fire({
          icon: 'success',
          title: 'Success',
          text: result.message
        });
        window.location.href = '/admin/allCoupons';
      } else {
        Swal.fire({
          icon: 'error',
          title: 'Error',
          text: result.message || 'Something went wrong!'
        });
      }
    } catch (error) {
      console.error('Error:', error);
      Swal.fire({
        icon: 'error',
        title: 'Error',
        text: 'Something went wrong!'
      });
    }
  }
  </script>

</body>
</html>
