<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdn.jsdelivr.net/npm/notyf/notyf.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf/notyf.min.css">
    <style>
      
        .product-card {
            transition: transform 0.3s ease-in-out;
        }
        .product-card:hover {
            transform: scale(1.05);
        }
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .product-card {
            animation: fadeIn 0.5s ease-out;
        }
        .heart-icon {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .heart-icon.active svg {
            fill: red;
            stroke: red;
        }
        .heart-icon:hover {
            transform: scale(1.1);
        }
    </style>
</head>
<body class="bg-gray-50">
    {{!-- header section --}}
    {{>header}}

   {{!-- banner section --}}
    <section class="relative w-full h-[400px] bg-cover bg-center" style="background-image: url('/images/banner\ 1.jpg');">
  <!-- Black Overlay -->
  <div class="absolute inset-0 bg-black bg-opacity-60 flex items-center justify-center text-center">
    <!-- Content (Heading & Breadcrumbs) -->
    <div class="text-white">
      <!-- Heading -->
      <h1 class="text-4xl md:text-7xl font-bold mb-4">Shop</h1>

      <!-- Breadcrumbs -->
      <nav class="text-sm md:text-base">
        <ol class="inline-flex space-x-2">
          <li><a href="/user/home" class="text-gray-300 hover:text-white">Home</a></li>
          <li><span class="text-gray-300">/</span></li>
          <li><a href="/user/shop" class="text-gray-300 hover:text-white">Shop</a></li>
          {{!-- <li><span class="text-gray-300">/</span></li>
          <li><a href="#" class="text-gray-300 hover:text-white">Current Page</a></li> --}}
        </ol>
      </nav>
    </div>
  </div>
</section>

    <!-- Filter and Sort Section -->
  <div class="container mx-auto  px-4 py-6 bg-blue-50 w-full">
    <div class="flex flex-wrap items-center justify-between">
      <!-- Left Section -->
      <div class="flex items-center gap-6">
        <!-- Filter Button -->
        <button class="flex items-center gap-2 bg-white px-4 py-2 rounded-md shadow-sm border border-gray-300 hover:bg-gray-100">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-gray-600">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2a1 1 0 01-.293.707L14 13.414V19a1 1 0 01-.447.894l-4 2A1 1 0 019 21v-7.586L3.293 6.707A1 1 0 013 6V4z" />
          </svg>
          <span class="text-gray-700 font-medium">Filter</span>
        </button>

        <!-- Grid and List View Icons -->
        <div class="flex items-center gap-3">
          <!-- Grid View -->
          <button class="p-2 bg-white rounded-md border border-gray-300 hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-gray-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h4v4H4V6zm6 0h4v4h-4V6zm6 0h4v4h-4V6zM4 14h4v4H4v-4zm6 0h4v4h-4v-4zm6 0h4v4h-4v-4z" />
            </svg>
          </button>
          <!-- List View -->
          <button class="p-2 bg-white rounded-md border border-gray-300 hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="w-5 h-5 text-gray-600">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
            </svg>
          </button>
        </div>


        
      </div>

      <!-- Right Section -->
      <div class="flex items-center gap-4">
        <!-- Category Filter -->
        <p class="text-gray-700 font-medium">Category</p>
        <select id="categoryFilter" class="border border-gray-300 rounded-md px-4 py-2 bg-white shadow-sm text-gray-600" onchange="filterByCategory(this.value)">
            <option value="all" {{#if (eq categoryFilter 'all')}}selected{{/if}}>All Categories</option>
            {{#each categories}}
            <option value="{{this._id}}" {{#if (eq ../categoryFilter (toString this._id))}}selected{{/if}}>{{this.name}}</option>
            {{/each}}
        </select>

        <!-- Sort By -->
        <p class="text-gray-700 font-medium">Sort by</p>
        <select id="sortBy" class="border border-gray-300 rounded-md px-4 py-2 bg-white shadow-sm text-gray-600" onchange="sortProducts(this.value)">
            <option value="default" {{#if (eq sortOption 'default')}}selected{{/if}}>Default</option>
            <option value="priceAsc" {{#if (eq sortOption 'priceAsc')}}selected{{/if}}>Price (Low to High)</option>
            <option value="priceDesc" {{#if (eq sortOption 'priceDesc')}}selected{{/if}}>Price (High to Low)</option>
            <option value="newArrivals" {{#if (eq sortOption 'newArrivals')}}selected{{/if}}>New arrivals</option>
            <option value="aToZ" {{#if (eq sortOption 'aToZ')}}selected{{/if}}>aA - zZ</option>
            <option value="zToA" {{#if (eq sortOption 'zToA')}}selected{{/if}}>zZ - aA</option>
        </select>

      </div>
    </div>
  </div>

  <!-- New Products Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-4xl font-bold text-gray-800 mb-6">All Products</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Product Card -->
             {{#each data}}
          <div class="bg-white shadow-md rounded-lg overflow-hidden product-card">
            <img src="{{this.images.[0]}}" onclick="load('{{this._id}}')" alt="{{this.name}}" class="w-full h-70 object-cover">
            <div class="p-4">
              <h2 class="text-lg font-bold text-gray-800">{{this.name}}</h2>
              <p class="text-sm text-gray-600">{{this.brand}}</p>
              <div class="flex justify-between items-center mt-2">
                {{#if this.activeOffer}}
                    <div class="flex flex-col">
                        <div class="flex items-center gap-2">
                            <span class="text-red-600 font-semibold">₹{{roundPrice this.finalPrice}}</span>
                            <span class="text-gray-400 line-through font-semibold text-sm">₹{{roundPrice this.price}}</span>
                             <span class="bg-green-200 text-green-600  font-semibold rounded-md text-xs">
                               {{this.activeOffer.discountValue}}% OFF
                            </span>
                        </div>
                    </div>
                {{else}}
                    <span class="text-red-600 font-semibold">₹{{roundPrice this.price}}</span>
                {{/if}}
                <button onclick="toggleWishlist(this,'{{this._id}}')" class="heart-icon {{#if this.isInWishlist}}active{{/if}}">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="{{#if this.isInWishlist}}red{{else}}none{{/if}}" viewBox="0 0 24 24" stroke="{{#if this.isInWishlist}}red{{else}}currentColor{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                </button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        
        <!-- show more button -->
        <div class="flex justify-center mt-10">
            <button class="w-48 px-6 py-2 bg-white border border-gray-200 font-semibold rounded-md text-gray-800 hover:bg-gray-100 shadow-lg">
              Show More
            </button>
          </div>
    </section>

    {{!-- footer section --}}
    {{>footer}}

<script>
    function load(productId){
        window.location.href=`/user/productView/${productId}`
    }
    function sortProducts(sortOption) {
      window.location.href = `/user/shop?sort=${sortOption}`;
    }
    const notyf = new Notyf({
        duration: 3000,
        position: {
            x: 'right',
            y: 'bottom',
        },
        types: [
            {
                type: 'success',
                background: 'green',
                duration: 3000,
            },
            {
                type: 'error',
                background: 'red',
                duration: 3000,
            }
        ]
    });

    async function toggleWishlist(button, productId) {
        try {
            const response = await fetch(`/user/toggle-wishlist/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (data.success) {
                button.classList.toggle('active');
                const heartIcon = button.querySelector('svg');
                
                if (button.classList.contains('active')) {
                    heartIcon.style.fill = 'red';
                    heartIcon.style.stroke = 'red';
                    notyf.success('Added to wishlist');
                } else {
                    heartIcon.style.fill = 'none';
                    heartIcon.style.stroke = 'currentColor';
                    notyf.success('Removed from wishlist');
                }
            } else if (data.redirect) {
                window.location.href = data.redirect;
            } else {
                notyf.error(data.message || 'Something went wrong');
            }
        } catch (error) {
            console.error('Error:', error);
            notyf.error('Something went wrong');
        }
    }

    function filterByCategory(categoryId) {
        const currentUrl = new URL(window.location.href);
        currentUrl.searchParams.set('category', categoryId);
        window.location.href = currentUrl.toString();
    }
</script>

</body>
</html>