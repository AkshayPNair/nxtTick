<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    {{>header}}
  <div class="w-full min-h-screen bg-gray-100 py-12">
    
    <div class="max-w-6xl mx-auto p-10 bg-white shadow rounded-lg">
      <!-- Order Summary Section -->
      
      <div class="mb-12">
        <h2 class="text-2xl font-semibold mb-8">Order Summary</h2>
        
        <div class="grid grid-cols-12 gap-8 items-start">
          {{#each orders.items}}  
            <div class="col-span-4">
                <img src="{{product.images.[0]}}" alt="Product Name" class="w-full rounded-lg shadow-md">
            </div>
            <div class="col-span-8">
                <h3 class="text-xl font-semibold">{{product.name}}</h3>
                <p class="text-md text-gray-700 mt-4">Price: ₹{{subtotal}}</p>
                <p class="text-md text-gray-700">Quantity: {{quantity}}</p>
            </div>
         {{/each}} 
        </div>
      </div>
  
      <!-- Shipping Address Section -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold mb-8">Shipping Address</h2>
        <div class="p-6 bg-gray-50 rounded-lg shadow-inner">
          <p class="text-lg text-gray-800 font-medium">{{order.address.name}}</p>
          <p class="text-lg text-gray-600">{{order.address.street}}</p>
          <p class="text-lg text-gray-600">{{order.address.city}}, {{order.address.state}}, {{order.address.zip}}</p>
          <p class="text-lg text-gray-600">{{order.address.country}}</p>
          <p class="text-lg text-gray-600">Phone:  {{order.address.phone}}</p>
        </div>
      </div>
  
      <!-- Order Tracking Section -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold mb-8">Order Tracking</h2>
        <div class="relative px-8">
          <div class="absolute inset-0 h-1 bg-gray-300"></div>
          <div class="flex justify-between items-center relative z-10">
            <!-- Pending -->
            <div class="flex flex-col items-center">
              <div class="w-8 h-8 rounded-full flex items-center justify-center bg-green-500 text-white text-xl">✓</div>
              <span class="mt-4 text-lg font-medium">Pending</span>
              <span class="text-sm text-gray-500">01/12/2024</span>
            </div>
            <!-- Shipped -->
            <div class="flex flex-col items-center">
              <div class="w-8 h-8 rounded-full flex items-center justify-center bg-green-500 text-white text-xl">✓</div>
              <span class="mt-4 text-lg font-medium">Shipped</span>
              <span class="text-sm text-gray-500">03/12/2024</span>
            </div>
            <!-- Out for Delivery -->
            <div class="flex flex-col items-center">
              <div class="w-8 h-8 rounded-full flex items-center justify-center bg-yellow-500 text-white text-xl">•</div>
              <span class="mt-4 text-lg font-medium">Out for Delivery</span>
              <span class="text-sm text-gray-500">--</span>
            </div>
            <!-- Delivered -->
            <div class="flex flex-col items-center">
              <div class="w-8 h-8 rounded-full flex items-center justify-center bg-gray-400 text-white text-xl">•</div>
              <span class="mt-4 text-lg font-medium">Delivered</span>
              <span class="text-sm text-gray-500">--</span>
            </div>
          </div>
        </div>
      </div>
  
      <!-- Additional Order Details Section -->
      <div class="mb-12">
        <h2 class="text-2xl font-semibold mb-8">Order Details</h2>
        <div class="text-lg text-gray-700">
          <p>Order Date: {{order.createdAt}}</p>
          <p>Payment Method: {{order.paymentMethod}}</p>
          <p>Order ID: {{order._id}}</p>
        </div>
      </div>
  
      <!-- Cancel Order Button -->
      <div class="text-center">
        <button class="px-2 py-1 bg-red-500 text-white text-lg font-semibold rounded-lg shadow-md hover:bg-red-600 focus:outline-none focus:ring-4 focus:ring-red-400">
          Cancel Order
        </button>
      </div>
    </div>
  </div>
</body>
</html>