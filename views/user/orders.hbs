<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Orders</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <style>
        .order-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .order-card:hover {
            transform: scale(1.02);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        .view-details {
            transition: all 0.3s ease;
        }
        .view-details:hover {
            transform: translateX(5px);
        }
        @keyframes slowBounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-25px);
            }
        }
    </style>
</head>
<body class="bg-gray-50">
    {{>header}}

    <div class="flex">
        <!-- Sidebar -->
            {{>profilebar}}

        <!-- Page Content -->
        <div class="flex-1 p-6">
            <h1 class="text-2xl font-semibold text-gray-800 mb-6">My Orders</h1>

            <!-- Orders List -->
            <div class="space-y-6">
                <!-- Single Order Card -->
                {{#if orders.length}} 
                {{#each orders}}
                <div class="order-card bg-white shadow-md rounded-lg overflow-hidden" data-aos="fade-up">
                    {{#each this.items}}
                    <div class="flex items-center p-4">
                        <!-- Product Image -->
                        <img src="{{this.product.images.[0]}}" alt="Product Image" class="w-20 h-20 object-cover rounded-lg border">
                        
                        <!-- Product Details -->
                        
                        <div class="ml-4 flex-1">
                            <h2 class="text-lg font-semibold text-gray-800">{{this.product.name}}</h2>

                            <!-- Horizontal Details -->
                            <div class="flex items-center space-x-8 mt-2">
                                <p class="text-sm text-gray-600">Quantity : <span class="font-medium text-black-500">{{this.quantity}}</span></p>
                                <p class="text-sm text-gray-600 flex items-center gap-2">
                                    Order Price : 
                                    {{#if this.activeOffer}}
                                        <!-- Product/Category Offer Applied -->
                                        <span class="font-medium text-red-600">Rs. {{this.finalPrice}}</span>
                                        <span class="font-medium text-gray-400 line-through text-sm">Rs. {{this.originalPrice}}</span>
                                        <span class="bg-green-200 text-green-600 font-semibold rounded-md text-xs px-2">
                                            {{this.activeOffer.discountValue}}% OFF
                                        </span>
                                    {{else if ../couponUsed}}
                                        <!-- Coupon Applied -->
                                        <span class="font-medium text-red-600">Rs. {{this.finalPrice}}</span>
                                        <span class="font-medium text-gray-400 line-through text-sm">Rs. {{this.originalPrice}}</span>
                                        <span class="bg-green-200 text-green-600 font-semibold rounded-md text-xs px-2">
                                            COUPON APPLIED
                                        </span>
                                    {{else}}
                                        <!-- Regular Price -->
                                        <span class="font-medium text-red-600">Rs. {{this.originalPrice}}</span>
                                    {{/if}}
                                </p>
                                <p class="text-sm text-gray-600 ">
                                    Status : 
                                    <span class="font-medium text-white rounded-xl px-1 
                                        {{#if (eq ../status 'Pending')}}bg-orange-200 text-orange-500{{/if}}
                                        {{#if (eq ../status 'Shipped')}}bg-blue-200 text-blue-500{{/if}}
                                        {{#if (eq ../status 'Out for Delivery')}}bg-yellow-100 text-yellow-500{{/if}}
                                        {{#if (eq ../status 'Delivered')}}bg-green-200 text-green-500{{/if}}
                                        {{#if (eq ../status 'Cancelled')}}bg-red-200 text-red-500{{/if}}
                                        {{#if (eq ../status 'Returned')}}bg-red-200 text-red-500{{/if}}">
                                        {{../status}}
                                    </span>
                                </p>
                                
                                {{#if (and (eq ../paymentMethod 'Razorpay') (eq ../paymentStatus 'Failed'))}}
                                    <p class="text-sm text-gray-600">Payment Status : <span class="font-medium text-red-500 bg-red-200 rounded-xl font-medium px-1">{{../paymentStatus}}</span></p>
                                    <button onclick="initiateRepayment('{{../_id}}')" 
                                            class="bg-blue-600 text-white px-2 py-0.5 
                                                   rounded-full font-medium
                                                   transform hover:scale-105 transition-all duration-300 ease-out
                                                   hover:shadow-blue-500/30 hover:shadow-xl
                                                   hover:bg-blue-700
                                                   border border-transparent hover:border-blue-300">
                                        Retry Payment
                                    </button>
                                {{/if}}

                            </div>
                        </div>
                        
                    </div>

                    {{/each}}
                    <!-- Buttons -->
                    <div class="flex justify-end items-center px-4 py-2 bg-gray-50">
                        <a href="/user/orderView/{{this._id}}" class="view-details inline-flex items-center text-sm font-semibold text-blue-600 hover:text-blue-800">
                            <span>View Details</span>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                        </a>
                    </div>
                </div>
                {{/each}}
                {{else}}
                    <div class="flex flex-col items-center justify-center min-h-[400px]" data-aos="fade-up">
                        <div class="relative">
                            <!-- Shopping bag icon with slower animation -->
                            <svg class="w-32 h-32 text-gray-300 mb-4 animate-[slowBounce_3s_ease-in-out_infinite]" 
                                 fill="none" 
                                 stroke="currentColor" 
                                 viewBox="0 0 24 24">
                                <path stroke-linecap="round" 
                                      stroke-linejoin="round" 
                                      stroke-width="1.5" 
                                      d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z">
                                </path>
                            </svg>
                        </div>
                        <h2 class="text-2xl font-bold text-gray-700 mb-2" data-aos="fade-up" data-aos-delay="100">
                            No Orders Yet
                        </h2>
                        <p class="text-gray-500 text-center mb-6 max-w-md" data-aos="fade-up" data-aos-delay="200">
                            Looks like you haven't made any orders yet. Start shopping to fill your order history!
                        </p>
                        <a href="/user/shop" 
                           class="group relative inline-flex items-center justify-center px-4 py-3 
                                  bg-gradient-to-r from-blue-500 to-blue-700 text-white font-bold
                                  rounded-full overflow-hidden shadow-xl
                                  hover:from-blue-600 hover:to-blue-800
                                  transform hover:scale-105 transition-all duration-300 ease-out
                                  hover:shadow-blue-500/30 hover:shadow-2xl"
                           data-aos="fade-up" data-aos-delay="300">
                            <span class="relative flex items-center gap-2">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:animate-bounce" 
                                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                                </svg>
                                Start Shopping
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" 
                                     fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                          d="M9 5l7 7-7 7"/>
                                </svg>
                            </span>
                        </a>
                    </div>
                {{/if}}
                
                <!-- End Single Order Card -->

                <!-- Repeat the above card structure for each order dynamically -->
            </div>
        </div>
    </div>
    {{>profileFooter}}
    <script>
        AOS.init({
            duration: 800,
            once: true
        });
    </script>
    <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
    <script>
    async function initiateRepayment(orderId) {
        try {
            const response = await fetch(`/user/repay-order/${orderId}`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' }
            });

            const result = await response.json();

            if (result.razorpayOrderId) {
                const options = {
                    key: result.key_id,
                    amount: result.amount,
                    currency: "INR",
                    name: "nxtTick",
                    description: "Order Repayment",
                    order_id: result.razorpayOrderId,
                    handler: function (response) {
                        fetch('/user/verify-payment', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify({
                                razorpay_payment_id: response.razorpay_payment_id,
                                razorpay_order_id: response.razorpay_order_id,
                                razorpay_signature: response.razorpay_signature,
                                orderId: orderId
                            })
                        })
                        .then(res => res.json())
                        .then(data => {
                            if (data.status) {
                                location.reload(); // Reload page after successful payment
                            }
                        });
                    },
                    modal: {
                        ondismiss: function() {
                            location.reload(); // Reload page when modal is dismissed
                        }
                    },
                    theme: {
                        color: "#3B82F6"
                    }
                };

                const rzp = new Razorpay(options);
                rzp.on('payment.failed', function (response) {
                    fetch('/user/payment-failed', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ orderId: orderId })
                    })
                    .then(() => {
                        location.reload(); // Reload page after payment failure
                    });
                });
                rzp.open();
            }
        } catch (error) {
            console.error('Error initiating repayment:', error);
            location.reload(); // Reload page if there's an error
        }
    }
    </script>
</body>
</html>