<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf/notyf.min.css">
    <script src="https://cdn.jsdelivr.net/npm/notyf/notyf.min.js"></script>
    <style>
        .product-card {
            transition: transform 0.3s ease-in-out;
        }
        .product-card:hover {
            transform: scale(1.05);
        }
        .heart-icon {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .heart-icon.active svg {
            fill: red;
            stroke: red;
        }
        .heart-icon:hover {
            transform: scale(1.1);
        }
    </style>
</head>
<body class="bg-gray-100 font-sans">
    {{!-- header --}}
    {{>header}}
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="md:hidden fixed inset-0 bg-gray-800 bg-opacity-75 z-50 hidden">
        <div class="flex justify-end p-4">
          <button id="close-menu" class="text-white">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <div class="flex flex-col items-center space-y-6 text-white py-10">
          <a href="home" class="text-lg hover:text-blue-400">Home</a>
          <a href="shop" class="text-lg hover:text-blue-400">Shop</a>
          <a href="#" class="text-lg hover:text-blue-400">Contact</a>
        </div>
      </div>
    
      
    <!-- Hero Section -->
    <section class="relative w-full h-[500px] bg-cover bg-center" style="background-image: url(/images/dc\ comics.jpg);">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    </section>

    <!-- Collection List Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-4xl font-bold text-gray-800 mb-8">Collection List</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Collection Card -->
            <div class="relative bg-gray-900 text-white rounded-lg overflow-hidden shadow-md group">
                <img src="/images/MRVL.jpg" alt="Marvel" class="w-full h-96 object-cover group-hover:opacity-80 transition-opacity">
                <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 group-hover:bg-opacity-70 transition-opacity">
                    <h3 class="text-xl font-bold">MARVEL</h3>
                </div>
            </div>
            <div class="relative bg-gray-900 text-white rounded-lg overflow-hidden shadow-md group">
                <img src="/images/DC.jpg" alt="DC Comics" class="w-full h-96 object-cover group-hover:opacity-80 transition-opacity">
                <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 group-hover:bg-opacity-70 transition-opacity">
                    <h3 class="text-xl font-bold">DC COMICS</h3>
                </div>
            </div>
            <div class="relative bg-gray-900 text-white rounded-lg overflow-hidden shadow-md group">
                <img src="/images/TRANSFORMERS.jpg" alt="Transformers" class="w-full h-96 object-cover group-hover:opacity-80 transition-opacity">
                <div class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 group-hover:bg-opacity-70 transition-opacity">
                    <h3 class="text-xl font-bold">TRANSFORMERS</h3>
                </div>
            </div>
        </div>
    </section>

    <!-- New Products Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <h2 class="text-4xl font-bold text-gray-800 mb-6">New Products</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            <!-- Product Card -->
             {{#each data}}
          <div class="bg-white shadow-md rounded-lg overflow-hidden product-card">
            <img src="{{this.images.[0]}}" onclick="load('{{this._id}}')" alt="{{this.name}}" class="w-full h-70 object-cover">
            <div class="p-4">
              <h2 class="text-lg font-bold text-gray-800">{{this.name}}</h2>
              <p class="text-sm text-gray-600 ">Sixth Scale Figure</p>
              <div class="flex justify-between items-center mt-2">
                {{#if this.activeOffer}}
                    <div class="flex flex-col">
                        <div class="flex items-center gap-2">
                            <span class="text-red-600 font-semibold">₹{{roundPrice this.finalPrice}}</span>
                            <span class="text-gray-400 font-semibold line-through text-sm">₹{{roundPrice this.price}}</span>
                             <span class="bg-green-200 text-green-600  font-semibold rounded-md text-xs">
                               {{this.activeOffer.discountValue}}% OFF
                            </span>
                        </div>
                        
                    </div>
                {{else}}
                    <span class="text-red-600 font-semibold">₹{{roundPrice this.price}}</span>
                {{/if}}
                <button onclick="toggleWishlist(this,'{{this._id}}')" class="heart-icon {{#if this.isInWishlist}}active{{/if}}">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="{{#if this.isInWishlist}}red{{else}}none{{/if}}" viewBox="0 0 24 24" stroke="{{#if this.isInWishlist}}red{{else}}currentColor{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                </button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
        
        <!-- show more button -->
        <div class="flex justify-center mt-10">
          <a href="/user/shop">
            <button class="w-48 px-6 py-2 bg-white border border-gray-200 font-semibold rounded-md text-gray-800 hover:bg-gray-100 shadow-lg">
              Show More
            </button>
            </a>
          </div>
    </section>
    
    <!-- banner 2 -->
    <section class="relative w-full h-[500px] bg-cover bg-center" style="background-image: url(/images/wol.jpg);">
        <div class="absolute inset-0 bg-black bg-opacity-50"></div>
    </section>

    <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Section Title -->
        <h1 class="text-center text-4xl font-bold text-gray-800 mb-10">POPULARS</h1>
         <!-- Cards Container -->
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
          <!-- Card 1 -->
          {{#each data2}}
          <div class="bg-white shadow-md rounded-lg overflow-hidden product-card">
            <img src="{{this.images.[0]}}" onclick="load('{{this._id}}')" alt="{{this.name}}" class="w-full h-70 object-cover">
            <div class="p-4">
              <h2 class="text-lg font-bold text-gray-800">{{this.name}}</h2>
              <p class="text-sm text-gray-600">{{this.brand}}</p>
              <div class="flex justify-between items-center mt-2">
                {{#if this.activeOffer}}
                    <div class="flex flex-col">
                        <div class="flex items-center gap-2">
                            <span class="text-red-600 font-semibold">₹{{roundPrice this.finalPrice}}</span>
                            <span class="text-gray-400 font-semibold line-through text-sm">₹{{roundPrice this.price}}</span>
                            <span class="bg-green-200 text-green-600  font-semibold rounded-md text-xs">
                               {{this.activeOffer.discountValue}}% OFF
                            </span>
                        </div>
                        
                    </div>
                {{else}}
                    <span class="text-red-600 font-semibold">₹{{roundPrice this.price}}</span>
                {{/if}}
                <button onclick="toggleWishlist(this,'{{this._id}}')" class="heart-icon {{#if this.isInWishlist}}active{{/if}}">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="{{#if this.isInWishlist}}red{{else}}none{{/if}}" viewBox="0 0 24 24" stroke="{{#if this.isInWishlist}}red{{else}}currentColor{{/if}}">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                    </svg>
                </button>
              </div>
            </div>
          </div>
          {{/each}}
        </div>
    
    
        <!-- Show More Button -->
        <div class="flex justify-center mt-10">
          <a href="/user/shop">
          <button class="w-48 px-6 py-2 bg-white border border-gray-200 font-semibold rounded-md text-gray-800 hover:bg-gray-100 shadow-lg">
            Show More
          </button>
          </a>
        </div>
      </section>

      <!-- Footer Section -->
  <footer class="bg-gray-100">
    <!-- Top Features Section -->
    <div class="bg-blue-50 py-6">
      <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-6 text-center px-6">
        <div class="flex flex-col items-center">
          <img src="/images/trophy.png" alt="Quality Icon" class="mb-2 w-12 h-12">
          <h4 class="text-lg font-semibold">High Quality</h4>
          <p class="text-sm text-gray-600">crafted from top materials</p>
        </div>
        <div class="flex flex-col items-center">
          <img src="/images/checked.png" alt="Warranty Icon" class="mb-2 w-12 h-12">
          <h4 class="text-lg font-semibold">Warranty Protection</h4>
          <p class="text-sm text-gray-600">Over 2 years</p>
        </div>
        <div class="flex flex-col items-center">
          <img src="/images/shipping.png" alt="Shipping Icon" class="mb-2 w-12 h-12">
          <h4 class="text-lg font-semibold">Free Shipping</h4>
          <p class="text-sm text-gray-600">Order over 150 $</p>
        </div>
        <div class="flex flex-col items-center">
          <img src="/images/customer-support.png" alt="Support Icon" class="mb-2 w-12 h-12">
          <h4 class="text-lg font-semibold">24 / 7 Support</h4>
          <p class="text-sm text-gray-600">Dedicated support</p>
        </div>
      </div>
    </div>

    <!-- Bottom Footer Section -->
    <div class="py-10 bg-white">
      <div class="max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-8 px-6">
        <!-- Logo and Address -->
        <div>
          <img src="/images/logo nxtTick.png" class="h-[30px] w-[130px] object-contain" alt="">
          <p class="mt-12 text-gray-600">
            400 University Drive Suite 200 Coral Gables,<br> 
            FL 33134 USA
          </p>
        </div>

        <!-- Links -->
        <div>
          <h3 class="text-lg font-semibold text-gray-800">Links</h3>
          <ul class="mt-12 space-y-6 text-gray-600">
            <li><a href="#" class="hover:text-blue-600">Home</a></li>
            <li><a href="#" class="hover:text-blue-600">Shop</a></li>
            <li><a href="#" class="hover:text-blue-600">About</a></li>
            <li><a href="#" class="hover:text-blue-600">Contact</a></li>
          </ul>
        </div>

        <!-- Help -->
        <div>
          <h3 class="text-lg font-semibold text-gray-800">Help</h3>
          <ul class="mt-12 space-y-6 text-gray-600">
            <li><a href="#" class="hover:text-blue-600">Payment Options</a></li>
            <li><a href="#" class="hover:text-blue-600">Returns</a></li>
            <li><a href="#" class="hover:text-blue-600">Privacy Policies</a></li>
          </ul>
        </div>

        <!-- Newsletter -->
        <div>
          <h3 class="text-lg font-semibold text-gray-800">Newsletter</h3>
          <div class="mt-12 flex items-center">
            <input
              type="email"
              placeholder="Enter Your Email Address"
              class="w-full px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
            />
            <button class="px-4 py-2  text-black border-gray-300 border rounded-r-lg hover:bg-gray-200">
              SUBMIT
            </button>
          </div>
        </div>
      </div>

      <!-- Copyright Section -->
      <div class="mt-10 text-center  text-gray-600 text-sm">
        <hr class="mb-4 ">
        <p>2024 <span class="font-bold text-blue-600 ">nxtTick</span>. All rights reserved</p>
      </div>
    </div>
  </footer>
  <script>
    function load(productId){
      location.href=`/user/productView/${productId}`
    }

    const notyf = new Notyf({
        duration: 3000,
        position: {
            x: 'right',
            y: 'bottom',
        },
        types: [
            {
                type: 'success',
                background: 'green',
                duration: 3000,
            },
            {
                type: 'error',
                background: 'red',
                duration: 3000,
            }
        ]
    });

    async function toggleWishlist(button, productId) {
        try {
            const response = await fetch(`/user/toggle-wishlist/${productId}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (data.success) {
                button.classList.toggle('active');
                const heartIcon = button.querySelector('svg');
                
                if (button.classList.contains('active')) {
                    heartIcon.style.fill = 'red';
                    heartIcon.style.stroke = 'red';
                    notyf.success('Added to wishlist');
                } else {
                    heartIcon.style.fill = 'none';
                    heartIcon.style.stroke = 'currentColor';
                    notyf.success('Removed from wishlist');
                }
            } else if (data.redirect) {
                window.location.href = data.redirect;
            } else {
                notyf.error(data.message || 'Something went wrong');
            }
        } catch (error) {
            console.error('Error:', error);
            notyf.error('Something went wrong');
        }
    }
  </script>
    
</body>
</html>
