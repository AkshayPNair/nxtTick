<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up Page</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body class="bg-white-100">
    <!-- Navbar -->
    <header class="bg-white shadow-md sticky">
        <div class="container mx-auto px-4 py-3 flex items-center justify-between">
            <div class="mx-10 flex items-center space-x-2">
                <img src="/images/logo nxtTick.png" alt="" style="width: 130px; height: 30px;"> 
            </div>
            <div class="space-x-4">
                <a href="login"><button class="px-4 py-2 text-gray-600 hover:text-gray-800 border-2 border-grey-200 rounded-lg hover:bg-gray-200">Login</button></a>
                <a href="signup"><button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700">Sign Up</button></a>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex items-center justify-center min-h-screen">
        <div class="container mx-auto px-4 py-10 lg:flex lg:space-x-8 items-center">
            <!-- Image Section -->
            <div class="flex justify-center lg:w-2/3 mb-8 lg:mb-0">
                <div class="w-full  overflow-hidden rounded-lg shadow-lg">
                    <img src="/images/signup img.jpg" alt="Optimus Prime Image" class="w-[950px] h-[600px]" >
                </div>
            </div>

            <!-- Form Section -->
            <div class=" w-full max-w-md lg:w-1/3 p-8 rounded-lg  ">
                <h2 class=" text-3xl font-bold text-gray-800 mb-4">Create an account</h2>
                <p class="text-lg text-blue-600 mb-6">Enter your details below</p>
                
                <form class="space-y-4" onsubmit="event.preventDefault(); submitDetail() ">
                    <input id="name" name="name" type="text" placeholder="Name" class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                    <input id="email" name="email" type="email" placeholder="Email " class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                    <div class="relative">
                        <input id="password" name="password" type="password" placeholder="Password" class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                        <button type="button" onclick="togglePassword('password', 'eyeIconClosed1', 'eyeIconOpen1')" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none">
                            <svg id="eyeIconClosed1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 transition-all duration-200 ease-in-out">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
                            </svg>
                            <svg id="eyeIconOpen1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hidden transition-all duration-200 ease-in-out">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </button>
                    </div>

                    <div class="relative">
                        <input id="confirmPassword" name="confirmPassword" type="password" placeholder="Confirm Password" class="w-full px-4 py-3 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600">
                        <button type="button" onclick="togglePassword('confirmPassword', 'eyeIconClosed2', 'eyeIconOpen2')" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-gray-400 hover:text-gray-600 focus:outline-none">
                            <svg id="eyeIconClosed2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 transition-all duration-200 ease-in-out">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88" />
                            </svg>
                            <svg id="eyeIconOpen2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 hidden transition-all duration-200 ease-in-out">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </button>
                    </div>
                    
                    <button class="w-full py-3 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-700 ">Create Account</button>
                </form>

                {{#if errorMessage}}
                    <p style="color: red;">{{errorMessage}}</p>
                {{/if}}

                {{!-- <div class="flex items-center justify-center my-4" style="margin-top: -25px;">
                    <span class="text-gray-500">OR</span>
                </div> 
                 --}}
                 <a href="auth/google"><button class="mt-4 w-full py-3 flex items-center justify-center bg-white border rounded-lg text-gray-600 hover:bg-gray-100">
                    <img src="/images/google logo.png" alt="Google Logo" class="w-5 h-5 mr-3">
                    Sign up with Google
                </button></a>
                
                <p class="text-center text-gray-500 mt-6">Already have an account? <a href="login" class="text-blue-600 hover:underline">Log in</a></p>
            </div>
        </div>
    </main>

    <script>
        function submitDetail(){
            const name=document.getElementById("name").value
            const email=document.getElementById("email").value
            const password=document.getElementById("password").value
            const confirmPassword=document.getElementById("confirmPassword").value
            //validation
            function validateEmail(email) {
                const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return regex.test(email);
            }
            const nameRegex = /^[a-zA-Z\s]+$/;      
        
        if(!name){
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Name is Required"
            });
            return;
        }
        if(!nameRegex.test(name)){
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Name should only contain alphabets."
            });
            return;
        }
        if(!email){
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Email is Required"
            });
            return;
        }
        if(!validateEmail(email)){
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Enter a valid email address"
            });
            return;
        }
        if(!password){
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Password is Required"
            });
            return;
        }
        const passwordRegex = /^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@$!%*?&])[A-Za-z\d@$!%*?&]{8,}$/;

        if (!passwordRegex.test(password)) {
                Swal.fire({
                    icon: "error",
                    title: "Oops...",
                    text: "Password must have at least 8 characters, including an uppercase letter, a lowercase letter, a number, and a special character (@, $, etc.)"
                });
            return;
        }
        if(!confirmPassword){
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Confirm Password is Required"
            });
            return;
        }
        if(password!==confirmPassword){
            Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "Password doesn't Match"
            });
            return;
        }
            //fetch method
            fetch('/user/signup',{
                headers: {
                "Content-Type": "application/json", 
                },
                method:"POST",
                body:JSON.stringify({
                    name:name,
                    email:email,
                    password:password
                })
            }).then(response=> response.json()).then(data=>{
                if(data.status){
                    window.location.href=`/user/verify-otp?email=${encodeURIComponent(email)}`;
                    //Swal.fire({
                   // icon: 'success',
                    //title: 'Success!',
                    //text: 'OTP has been sent to your email.',
                    //confirmButtonText: 'Verify OTP'
                //}).then((result)=>{
                   // if(result.isConfirmed){
                        
                   // }
                //});
                }else{
                    Swal.fire({
                        icon: 'error',
                        title: 'Oops...',
                        text: data.message || 'Something went wrong!'
                     });
                }
            }).catch(error =>{
                console.log("Error : ",error);
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: 'Something went wrong! Please try again.'
                });
            });
        } 

        function togglePassword(inputId, closedIconId, openIconId) {
            const passwordInput = document.getElementById(inputId);
            const eyeIconClosed = document.getElementById(closedIconId);
            const eyeIconOpen = document.getElementById(openIconId);
            
            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIconClosed.classList.add('hidden', 'rotate-180');
                eyeIconOpen.classList.remove('hidden');
                eyeIconOpen.classList.add('rotate-0');
            } else {
                passwordInput.type = 'password';
                eyeIconClosed.classList.remove('hidden', 'rotate-180');
                eyeIconOpen.classList.add('hidden');
                eyeIconClosed.classList.add('rotate-0');
            }
        }
    </script>



</body>
</html>
